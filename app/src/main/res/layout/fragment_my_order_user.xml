<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myOrderUserHeadlineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myOrderUserOwnerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserHeadlineTextView"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myOrderUserAddressFromTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserOwnerTextView"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myOrderUserAddressToTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserAddressFromTextView"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myOrderUserCommentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserAddressToTextView"  />

    <Button
        android:id="@+id/myOrderDeclineButton"
        android:text="Отказаться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserCommentTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/myOrderStartChatButton"
        android:text="Начать чат"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/myOrderUserCommentTextView"
        app:layout_constraintLeft_toRightOf="@id/myOrderDeclineButton" />

</androidx.constraintlayout.widget.ConstraintLayout>