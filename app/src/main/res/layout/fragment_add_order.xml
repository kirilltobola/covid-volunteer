<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="7dp">

    <EditText
        android:id="@+id/headlineEditText"
        android:hint="Заголовок*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/addressFromEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Откуда"

        app:layout_constraintTop_toBottomOf="@+id/headlineEditText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/addressToEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Куда"

        app:layout_constraintTop_toBottomOf="@+id/addressFromEditText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/orderDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Дата"

        app:layout_constraintTop_toBottomOf="@+id/addressToEditText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/orderCommentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Комментарий"

        app:layout_constraintTop_toBottomOf="@+id/orderDateEditText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/createOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"

        app:layout_constraintTop_toBottomOf="@+id/orderCommentEditText"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>